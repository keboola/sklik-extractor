{
    "name": "keboola/sklik-extractor",
    "license": "MIT",
    "type": "project",
    "description": "Sklik Extractor for Keboola Connection",
    "keywords": ["keboola", "sklik", "extractor"],
    "authors": [
        {
            "name": "Jakub Matejka",
            "email": "jakub@keboola.com"
        }
    ],
    "require": {
        "PHP": "^7.1",
        "guzzlehttp/guzzle": "^6.3",
        "keboola/csv": "^2.0",
        "keboola/php-component": "^4.1",
        "symfony/serializer": "^4.1"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "keboola/coding-standard": "^4.0",
        "keboola/php-temp": "^1.0",
        "phpstan/phpstan-shim": "^0.9.2",
        "phpunit/phpunit": "^7.0",
        "symfony/process": "^4.0",
        "keboola/datadir-tests": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\SklikExtractor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\SklikExtractor\\Tests\\": "tests/phpunit/"
        }
    },
    "scripts": {
        "tests-phpunit": "phpunit",
        "tests": [
            "@tests-phpunit"
        ],

        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
